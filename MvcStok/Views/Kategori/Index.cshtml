@using MvcStok.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLKATEGORILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Katagori ID</th>
        <th>Katagori ADI</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var ktg in Model)
        {
            <tr>
                <th>@ktg.KATEGORID</th>
                <td>@ktg.KATEGORIAD</td>
                <td><a href="/Kategori/Sil/@ktg.KATEGORID" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Kategori/KategoriGetir/@ktg.KATEGORID" class="btn btn-success">Güncelle</a> </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>
